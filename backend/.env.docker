# ============================================================================
# CDF Smart Hub - Docker Compose Environment Configuration
# ============================================================================
# This file contains environment variables specifically for Docker containers
# Copy this to .env.docker and modify values for your environment
# ============================================================================

# Database Configuration (PostgreSQL)
POSTGRES_DB=cdf_smarthub
POSTGRES_USER=postgres
POSTGRES_PASSWORD=cdf_secure_db_password_2024
PGDATA=/var/lib/postgresql/data/pgdata

# Redis Configuration
REDIS_PASSWORD=

# MinIO S3 Storage Configuration
MINIO_ROOT_USER=cdf_storage_admin
MINIO_ROOT_PASSWORD=cdf_secure_storage_password_2024

# PgAdmin Configuration (Development only)
PGADMIN_DEFAULT_EMAIL=admin@cdf.local
PGADMIN_DEFAULT_PASSWORD=cdf_admin_password_2024
PGADMIN_LISTEN_PORT=80

# Kafka Configuration
KAFKA_BROKER_ID=1
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092,PLAINTEXT_HOST://localhost:29092
KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
KAFKA_INTER_BROKER_LISTENER_NAME=PLAINTEXT
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_AUTO_CREATE_TOPICS_ENABLE=true

# Zookeeper Configuration
ZOOKEEPER_CLIENT_PORT=2181
ZOOKEEPER_TICK_TIME=2000

# Redis Commander
REDIS_HOSTS=local:redis:6379

# Network Configuration
COMPOSE_PROJECT_NAME=cdf_smarthub

# Environment
NODE_ENV=development