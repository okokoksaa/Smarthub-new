# ============================================================================
# CDF SMART HUB - ENVIRONMENT VARIABLES (Example)
# ============================================================================
# IMPORTANT: Copy this file to .env and fill in actual values
# NEVER commit .env to version control
# ============================================================================

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=development
APP_NAME=CDF Smart Hub
APP_VERSION=1.0.0
APP_PORT=3000

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cdf_smarthub
DB_USERNAME=cdf_app_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_SSL_ENABLED=false
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_SYNCHRONIZE=false
DB_LOGGING=false

# ============================================================================
# REDIS (Session & Cache)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ============================================================================
# KAFKA (Event Streaming)
# ============================================================================
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=cdf-smarthub
KAFKA_GROUP_ID=cdf-smarthub-group
KAFKA_SASL_ENABLED=false
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

# ============================================================================
# JWT (Authentication)
# ============================================================================
JWT_SECRET=CHANGE_ME_256_BIT_SECRET_KEY_HERE
JWT_REFRESH_SECRET=CHANGE_ME_DIFFERENT_256_BIT_SECRET
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d
JWT_ISSUER=cdf-smarthub.gov.zm

# ============================================================================
# AWS (S3, SES, Secrets Manager)
# ============================================================================
AWS_REGION=af-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=cdf-smarthub-documents
AWS_S3_ENDPOINT=
AWS_SES_FROM_EMAIL=noreply@cdf-smarthub.gov.zm
AWS_SECRETS_MANAGER_ENABLED=false

# ============================================================================
# STORAGE (MinIO alternative to S3)
# ============================================================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET=cdf-documents

# ============================================================================
# NOTIFICATIONS
# ============================================================================

# SMS (Africa's Talking)
AFRICAS_TALKING_USERNAME=sandbox
AFRICAS_TALKING_API_KEY=
AFRICAS_TALKING_FROM=CDF_HUB

# Email (SendGrid alternative)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@cdf-smarthub.gov.zm

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================

# Banking APIs
ZANACO_API_URL=https://api.zanaco.co.zm/v1
ZANACO_API_KEY=
ZANACO_CLIENT_ID=
ZANACO_CLIENT_SECRET=

STANBIC_API_URL=https://api.stanbic.co.zm/v1
STANBIC_API_KEY=
STANBIC_CLIENT_ID=
STANBIC_CLIENT_SECRET=

# Government Systems
IFMIS_API_URL=https://ifmis.mof.gov.zm/api
IFMIS_API_KEY=
IFMIS_CLIENT_ID=
IFMIS_CLIENT_SECRET=

ZPPA_API_URL=https://api.zppa.org.zm
ZPPA_API_KEY=

# Mobile Money
AIRTEL_MONEY_API_URL=https://openapiuat.airtel.africa
AIRTEL_MONEY_API_KEY=
AIRTEL_MONEY_CLIENT_ID=
AIRTEL_MONEY_CLIENT_SECRET=

MTN_MOMO_API_URL=https://sandbox.momodeveloper.mtn.com
MTN_MOMO_API_KEY=
MTN_MOMO_SUBSCRIPTION_KEY=

# ============================================================================
# AI SERVICES
# ============================================================================
OPENAI_API_KEY=
OPENAI_ORG_ID=
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.3

# Azure OpenAI (alternative)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ============================================================================
# SECURITY
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000,https://cdf-smarthub.gov.zm
HELMET_ENABLED=true
CSRF_ENABLED=true

# Encryption
ENCRYPTION_KEY=CHANGE_ME_32_BYTE_HEX_KEY
ENCRYPTION_ALGORITHM=aes-256-gcm

# ============================================================================
# MICROSERVICES PORTS
# ============================================================================
API_GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
PROJECT_SERVICE_PORT=3002
FINANCE_SERVICE_PORT=3003
WORKFLOW_SERVICE_PORT=3004
DOCUMENT_SERVICE_PORT=3005
AUDIT_SERVICE_PORT=3006
NOTIFICATION_SERVICE_PORT=3007
INTEGRATION_SERVICE_PORT=3008
AI_SERVICE_PORT=3009

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_AI_ENABLED=true
FEATURE_MOBILE_MONEY_ENABLED=true
FEATURE_IFMIS_INTEGRATION_ENABLED=false
FEATURE_PUBLIC_PORTAL_ENABLED=true
FEATURE_OFFLINE_MODE_ENABLED=true

# ============================================================================
# PERFORMANCE
# ============================================================================
CACHE_TTL=300
MAX_FILE_UPLOAD_SIZE_MB=10
REQUEST_TIMEOUT_MS=30000
DATABASE_QUERY_TIMEOUT_MS=10000

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs
GRAPHQL_PLAYGROUND_ENABLED=false
DEBUG_MODE=false
