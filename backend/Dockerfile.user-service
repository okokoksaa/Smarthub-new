# Multi-stage build for User Service
FROM node:20-alpine AS builder

WORKDIR /app

RUN npm install -g pnpm

COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY services/user-service/package.json ./services/user-service/
COPY shared/database/package.json ./shared/database/

RUN pnpm install --frozen-lockfile

COPY shared/ ./shared/
COPY services/user-service/ ./services/user-service/

RUN pnpm --filter @shared/database build
RUN pnpm --filter user-service build

# Production stage
FROM node:20-alpine

RUN apk add --no-cache dumb-init

RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001

WORKDIR /app

RUN npm install -g pnpm

COPY --chown=nodejs:nodejs package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY --chown=nodejs:nodejs services/user-service/package.json ./services/user-service/
COPY --chown=nodejs:nodejs shared/database/package.json ./shared/database/

RUN pnpm install --frozen-lockfile --prod

COPY --chown=nodejs:nodejs --from=builder /app/shared/database/dist ./shared/database/dist
COPY --chown=nodejs:nodejs --from=builder /app/services/user-service/dist ./services/user-service/dist

USER nodejs

EXPOSE 3001

HEALTHCHECK --interval=30s --timeout=5s --start-period=30s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3001/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

ENTRYPOINT ["dumb-init", "--"]
CMD ["node", "services/user-service/dist/main.js"]
