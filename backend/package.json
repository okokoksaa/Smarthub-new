{
  "name": "cdf-smarthub-backend",
  "version": "1.0.0",
  "description": "CDF Smart Hub - National Constituency Development Fund Management System (Backend)",
  "private": true,
  "workspaces": [
    "services/*",
    "shared/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "pnpm -r run build",
    "start:dev": "concurrently \"pnpm:start:dev:*\"",
    "start:dev:gateway": "pnpm --filter api-gateway run start:dev",
    "start:dev:user": "pnpm --filter user-service run start:dev",
    "start:dev:project": "pnpm --filter project-service run start:dev",
    "start:dev:finance": "pnpm --filter finance-service run start:dev",
    "start:dev:workflow": "pnpm --filter workflow-service run start:dev",
    "start:dev:document": "pnpm --filter document-service run start:dev",
    "start:dev:audit": "pnpm --filter audit-service run start:dev",
    "start:dev:notification": "pnpm --filter notification-service run start:dev",
    "start:dev:integration": "pnpm --filter integration-service run start:dev",
    "start:dev:ai": "pnpm --filter ai-service run start:dev",
    "start:dev:wdc": "pnpm --filter wdc-service run start:dev",
    "start:prod": "pnpm -r run start:prod",
    "test": "pnpm -r run test",
    "test:watch": "pnpm -r run test:watch",
    "test:cov": "pnpm -r run test:cov",
    "test:e2e": "pnpm -r run test:e2e",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "pnpm -r run typecheck",
    "db:migrate": "cd database/migrations && ./deploy_database.sh",
    "db:seed": "cd database/seed-data && ./load_seed_data.sh",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/typeorm": "^10.0.1",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/microservices": "^10.3.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/throttler": "^5.1.1",
    "typeorm": "^0.3.19",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "kafkajs": "^2.2.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "@aws-sdk/client-ses": "^3.490.0",
    "@aws-sdk/client-secrets-manager": "^3.490.0",
    "uuid": "^9.0.1",
    "date-fns": "^3.0.6",
    "lodash": "^4.17.21",
    "rxjs": "^7.8.1",
    "reflect-metadata": "^0.2.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.8",
    "@types/passport-jwt": "^4.0.0",
    "@types/passport-local": "^1.0.38",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-loader": "^9.5.1",
    "tsconfig-paths": "^4.2.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zambia-cdf/smarthub-backend.git"
  },
  "keywords": [
    "cdf",
    "constituency",
    "development",
    "fund",
    "zambia",
    "government",
    "nestjs",
    "microservices",
    "multi-tenant"
  ],
  "author": "CDF Smart Hub Development Team",
  "license": "PROPRIETARY",
  "bugs": {
    "url": "https://github.com/zambia-cdf/smarthub-backend/issues"
  },
  "homepage": "https://cdf-smarthub.gov.zm"
}
